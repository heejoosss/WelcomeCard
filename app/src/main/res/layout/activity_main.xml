<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.happybirthday.MainActivity">

    <ImageView
        android:src="@drawable/rainyimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/korea_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#8DA6BF"
        android:text="KOREA"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/hongkong_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingLeft="10dp"
        android:layout_alignParentRight="true"
        android:background="#8DA6BF"
        android:text="HK"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@+id/thai_textView"
        android:layout_alignStart="@+id/thai_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#8DA6BF"
        android:text="29 'C"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:id="@+id/textView2"
        android:layout_below="@+id/korea_textView"
        android:layout_alignLeft="@+id/korea_textView"
        android:layout_alignStart="@+id/korea_textView"
        android:layout_alignRight="@+id/korea_textView"
        android:layout_alignEnd="@+id/korea_textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#8DA6BF"
        android:text="27 'C"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:layout_below="@id/hongkong_textView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:id="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#8DA6BF"
        android:text="22 'C"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:id="@+id/textView5"
        android:layout_below="@+id/thai_textView"
        android:layout_alignLeft="@+id/chek_textView"
        android:layout_alignStart="@+id/chek_textView"
        android:layout_alignRight="@+id/chek_textView"
        android:layout_alignEnd="@+id/chek_textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#8DA6BF"
        android:text="30 'C"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/textView4"
        android:layout_alignLeft="@+id/thai_textView"
        android:layout_alignStart="@+id/thai_textView" />
    <TextView
        android:id="@+id/thai_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_above="@id/textView4"
        android:background="#8DA6BF"
        android:text="THAI"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/chek_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:background="#8DA6BF"
        android:text="CHEK"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_above="@id/textView5"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="WELCOME!"
        android:textSize="36sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>


